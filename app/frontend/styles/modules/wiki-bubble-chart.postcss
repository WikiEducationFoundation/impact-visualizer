.vega-bindings {
  display: flex;
  justify-content: flex-start;
  margin-bottom: 4px;
}

.vega-bind-name {
  display: block;
  font-size: 14px;
  font-weight: 600;
  margin-bottom: 6px;
}

.BoxTitle {
  font-size: 14px;
  font-weight: 600;
  margin-bottom: 6px;
}

.WikiBubbleChart {
  background-color: white;
  border: 1px solid #e0e0e0;
  width: 100%;
  &Header {
    display: grid;
    grid-template-columns: 1fr;
    gap: 0;
    align-items: stretch;

    @media (min-width: 768px) {
      grid-template-columns: 1fr 1fr;
    }

    @media (min-width: 1024px) {
      grid-template-columns: repeat(3, 1fr);
    }

    @media (min-width: 1440px) {
      grid-template-columns: 460px 200px 240px 180px 200px 1fr;
    }
  }

  &HeaderFilters {
    border-right: 1px solid #d9d9d9;
    border-bottom: 1px solid #d9d9d9;
    padding-right: 12px;
  }

  &HeaderSearch {
    border-bottom: 1px solid #d9d9d9;
    border-right: 1px solid #d9d9d9;
  }

  &HeaderSort {
    border-bottom: 1px solid #d9d9d9;
    border-right: 1px solid #d9d9d9;
  }

  &HeaderExtra {
    border-bottom: 1px solid #d9d9d9;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  &HeaderBox {
    padding: 12px;
    border-right: 1px solid #d9d9d9;
    border-bottom: 1px solid #d9d9d9;
    input[type="search"] {
      width: 100%;
    }
    &:last-child {
      border-right: none;
    }
  }

  &SortLabel {
    font-size: 13px;
    font-weight: 500;
  }

  &SortSelect {
    padding: 4px 8px;
    border-radius: 4px;
    border: 1px solid #cfcfcf;
    font-size: 13px;
    width: 100%;
    background-color: #fff;
  }

  &RangeRow {
    display: flex;
    gap: 8px;
    align-items: center;
  }

  &RangeField {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  &RangeLabel {
    font-size: 12px;
    font-weight: 600;
  }

  &RangeInput {
    padding: 4px 8px;
    font-size: 13px;
    width: 100%;
  }

  &TitleRow {
    border-bottom: 1px solid #d9d9d9;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  &SearchContainer {
    display: flex;
    justify-content: flex-start;
  }

  &ChartContainer {
    overflow-y: hidden;
    width: 100%;
  }

  /* Legend */
  &Legend {
    margin-top: 8px;
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
    align-items: center;
    font-size: 0.9rem;

    &Item {
      display: flex;
      align-items: center;
      gap: 4px;
    }

    &DotArticle,
    &DotLead,
    &RingDiscussion,
    &RingPrevArticle {
      display: inline-block;
      width: 12px;
      height: 12px;
      border-radius: 50%;
    }

    &DotArticle {
      background-color: rgba(13, 71, 161, 0.5);
    }

    &DotLead {
      background-color: #90caf9;
    }

    &RingDiscussion {
      border: 2px solid #2196f3;
      background-color: transparent;
    }

    &RingPrevArticle {
      border: 2px dashed #64b5f6;
      background-color: transparent;
    }

    &LineChange {
      display: inline-block;
      width: 16px;
      height: 0;
      border-top: 2px dashed #757575;
    }
  }
}

.QualityAssessment {
}

.QualityAssessmentTitle {
  font-weight: 600;
  margin-bottom: 6px;
  font-size: 14px;
}

.QualityFilterGrid {
  display: grid;
  grid-template-columns: repeat(4, minmax(0, 1fr));
  gap: 8px 12px;
}

.QualityFilterBtn {
  display: flex;
  align-items: center;
  gap: 10px;
  width: 100%;
  box-sizing: border-box;
  padding: 6px 10px;
  border: 1px solid #d9d9d9;
  border-radius: 6px;
  background: #fff;
  cursor: pointer;
  transition: background-color 120ms ease, border-color 120ms ease,
    box-shadow 120ms ease;
}

.QualityFilterBtn:hover {
  border-color: #bdbdbd;
}

.QualityFilterBtn.is-selected {
  background-color: #cfe9e7;
  border-color: #b6deda;
}

.QualityFilterDot {
  width: 14px;
  height: 14px;
  border-radius: 3px;
  display: inline-block;
}

.QualityFilterLabel {
  font-size: 13px;
}

.ProtectionFilter {
  &Checkboxes {
    display: flex;
    flex-direction: row;
    gap: 8px;
  }

  &Label {
    display: flex;
    align-items: center;
    gap: 8px;
    cursor: pointer;
    padding: 6px 10px;
    border: 1px solid #d9d9d9;
    border-radius: 6px;
    background: #fff;
    transition: background-color 120ms ease, border-color 120ms ease;

    &:hover {
      border-color: #bdbdbd;
      background-color: #f5f5f5;
    }

    input[type="checkbox"] {
      width: 20px;
      height: 20px;
      cursor: pointer;
      border-radius: 6px;
    }
  }
}
